<?xml version="1.0" encoding="utf-8"?>
<!--bubble-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/sender_color" />
            </shape>
        </rotate>
    </item>
    <item android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/sender_color"/>
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topRightRadius="30dp"/>
        </shape>
    </item>

</layer-list>